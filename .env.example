# Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# Environment
# =============================================================================
APP_ENVIRONMENT=local  # local, dev, stg, prod

# =============================================================================
# LLM Configuration
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.0

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/langgraph_agent
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# Observability (Optional)
# =============================================================================
# LangSmith - for tracing and debugging
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=langgraph-agent

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or console

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_EVALUATION_SAMPLING=false
EVALUATION_SAMPLE_RATE=0.1
